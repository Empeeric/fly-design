@import 'mixin'

text-color = #636466
gray-light = #CCCECF
gray-lighter = #E0E1E2
gray-dark = #B1B4B6
pink = #EF2D61
green = #95CE92
green-light = #CFE9CE

colors = 0 green #0084B6 #BC1A5E pink #F98813 #FDB128

width-max = 972px

html, body
  margin 0
  padding 0
  direction rtl

body
  font-size 16px
  color text-color
  -webkit-font-smoothing antialiased
  @media (min-height: 700px)
    padding-top 163px

body, h1, h2, h3, h4, h5, input, textarea, button
  font-family 'MeodedPashut', 'Merriweather Sans', arial, sans-serif

h1, h2
  text center

a, a:hover
  color pink
  text-decoration none !important

img.cover
  width 100%

ul.inline
  list-style none
  margin 0
  padding 0
  li
    display inline
    padding 0

.container
  width 100%
  max-width width-max
  min-width 320px
  margin 0 auto
  ul&
    padding 0
    list-style none
  img&
    display block

#body
  background white
  position relative
  z-index 2

header
  width 100%
  @media (min-height: 700px)
    fixed top right
    z-index 100
  background white
  h1
    float left
    margin-left 10px
    a
      display block
      background url(../img/logo.png)
      size 193px 50px
      font-size 0
  p
    margin 0
    padding 30px 0
    font-size 16px
  nav
    background gray-light
    a
      display inline-block
      padding 10px 20px
      color text-color
      &.active
        background pink
        color white
      &:hover
        background gray-dark
        color white
    &.second
      background text-color
      a
        color white

triangle-setup()
  position relative
  &:before
    $size = 12px
    content none
    absolute top 100% right 50%
    z-index 10
    display block
    size 0
    margin-right - $size
    border $size solid transparent
    border-bottom-width 0
    border-top-color white

triangle(bg = @background || white)
  &:before
    content ''
    border-top-color bg

section
  @extend .cf
  triangle-setup()
  padding 30px 0
  background white

.big-quote
  direction ltr
  text 40px 40px center
  margin-bottom 25px
  font-weight 300
  strong
    font-size 38px
    font-weight 400
  small
    display block
    font-size 22px
  &:before
    content ''
    display block
    margin 10px auto
    background url(../img/quote.png) center
    size 52px 40px

.icon-plus
  display block
  size 30px
  margin 10px auto
  background pink
  text 30px 30px white
  border-radius 50%
  &:before
    margin 0
  &:hover
    background white
    color pink

#slider
  padding-bottom 30px
  position relative
  triangle()
  h3
    absolute right top
    opacity 0
    -webkit-transition opacity .9s 1.1s
    text 30px normal
  .slider li
    img
      width auto
      max-height 400px
    &.rslides1_on
      h3
        opacity 1
  @media (max-width: 600px)
    h3, .banner
      display none
    .slider li img
      width 100%
      max-height none
  nav
    absolute right bottom 30px
    z-index 40
    a
      display inline-block
      size 40px
      text 30px white center
      background green
      &:hover
        background pink
      &:before
        line-height 40px
  .banner
    size 110px
    absolute left -15px top 40px
    z-index 30
    padding 20px
    background green
    text white center
    border-radius 50%
    h4, p
      margin 0
      padding 0
    .icon-plus
      absolute top 15px left -10px


#quote, #how
  background text-color
  color white
  triangle()
  .about strong
    color green

#features
  background green
  triangle()
  text-align center
  li
    col(3)
    padding 0 15px
  h2
    text bold white
  for noun in key eye hand
    image = '/img/icons/'+ noun +'.png'
    hover = '/img/icons/'+ noun +'-hover.png'
    a.{noun}
      display inline-block
      size 198px
      padding-top @height
      background url(image)
      &:hover
        background url(hover)


#how
  padding 0
  text center
  h2
    margin 0
    padding 30px 0
    text 250% normal
    strong
      color green

#steps
  background gray-lighter
  triangle()
  ul
    overflow hidden
  li
    col(6)
    margin 30px 0
    padding 0 15px
    h3
      text 16px bold
      height 50px
    .number
      text 150px 100px
    for color, i in colors
      &:nth-child({i})
        .number
          color color
  .line
    padding 0 0 30px 40px
    position relative
    &:before
      content ''
      absolute right top
      z-index 10
      size 0
      border 25px solid transparent
      border-left-width 0
      border-right-color gray-lighter
  .line span
    col(6)
    height 50px
    position relative
    &:after
      content ''
      absolute right 100% top
      z-index 10
      size 0
      border 25px solid transparent
      border-left-width 0
    for color, i in colors
      &:nth-child({i})
        background color
        &:after
          border-right-color color

#we
  padding-top 0
  text center
  triangle()
  h2
    color white
    text 100px 100px bold
    margin -86px 0 10px 0
  .container
    z-index 4
    position relative
    max-width 600px
  .icon-plus:hover
    background gray-light

#contact
  font-size 18px
  background green
  /*box-shadow 0 3px 5px #ccc*/
  h2
    margin 10px 0
    text 50px text-color right
  form
    float right
    width 40%
    padding-left 30px
  input, textarea
    display block
    width 100%
    text 18px text-color
    margin-bottom 6px
    padding 8px 15px
    background green-light
    border 0
  textarea
    height 100px
    padding 15px
  button
    float left
    margin-top 10px
    text 24px text-color
    background transparent
    border none
    .icon-left
      display inline-block
      background text-color
      color green
      border-radius 50%
      &:before
        margin 0 0.1em
    &:hover, &:active
      .icon-left
        color text-color
        background white
    &:active
      color white
      .icon-left
        color green
  .col
    width 60%
    float right
  .map
    float right
    margin 0 0 15px 15px
    border 1px solid text-color
  strong
    text bold white
  .bottom
    float right
    font-size 16px
  a.icon-fb
    text 28px text-color
    &:hover
      text white

footer
  width 100%
  fixed bottom right
  padding 30px 0 20px 0

.footer-padding
  height 580px
.footer
  padding-top 0

a.up
  margin-top 20px
  display inline-block
  padding-left 5px
  color pink
  line-height 31px
  span
    display none
  &:hover
    span
      display inline
    .icon-up
      background gray-light
      color pink
  .icon-up
    margin-left 5px
    background pink
    text 25px white
    &:before
      size 30px
      margin 0

#pictures
  padding 0
  position relative
  img
    col(4)
    overflow hidden


#items
  h1
    color pink
  article
    margin-top 30px
    border 1px solid gray-dark
    overflow hidden
    position relative
    height 130px
    -webkit-transition height .5s
    .title
      padding 30px
      cursor pointer
      background left top no-repeat
      -webkit-transition padding .35s
      triangle(text-color)
      .icon-close
        absolute left 5px top 5px
        text 25px white
        -webkit-transform translateX(-100px)
        -webkit-transition -webkit-transform .35s
      &:before
        right 80%
      h2, p
        margin 0
      h2
        text 40px right normal
      .big.icon-left
        absolute left top 10px
        font-size 100px
        -webkit-transform translateX(-100px)
        -webkit-transition -webkit-transform .35s
    &.left .title
      padding-right 70%
      background right top no-repeat
    &:hover, &.expand
      .title
        border-color text-color
        background text-color !important
        color white
        p .icon-left
          display none
      .big.icon-left
        -webkit-transform translateX(0)
    &.expand
      height 600px
      .title
        padding-right 30px
      .big.icon-left
        -webkit-transform translateX(-100px)
      .icon-close
        -webkit-transform translateX(0)
  .content
    height 472px
    padding 30px
    position relative
  .slider
    float right
    size 70% 100%
    margin-left 30px
    border 1px solid gray-dark
    position relative
    img
      height 412px
    .next, .prev
      absolute top 50% right
      z-index 10
      size 38px
      margin-top - (@height / 2)
      background text-color
      text 30px 40px white center
      &:hover
        background pink
    .next
      right auto
      left 0
    .rslides_tabs
      absolute right 15px bottom 15px
      z-index 10
      @extend ul.inline
      a
        display inline-block
        size 12px
        background gray-light
        text 0
        margin-left 8px
      &:hover
        background pink
    .rslides_here a
      background text-color

  &.third
    .thumb
      float right
      size 304px 170px
      text center
      margin 0 0 30px 30px
      border 1px solid gray-dark
      position relative
      overflow hidden
      &:nth-child(3n+1)
        margin-left 0
      h2
        absolute left right bottom
        margin 0
        padding 5px 15px 5px 10px
        background text-color
        text white normal right
        -webkit-transform translateY(40px)
        -webkit-transform-origin bottom left
        -webkit-transition -webkit-transform .2s
        i
          float left
          -webkit-transform rotateZ(0)
          -webkit-transition -webkit-transform .2s
      &:hover, &.selected
        h2
          -webkit-transform translateY(0)
      &.selected
        h2 i
          -webkit-transform rotateZ(-90deg)
    article
      height 0
      border-color transparent
      -webkit-transition height 1s
      .title
        background text-color
        color white
      &.expand
        border-color gray-dark
        height 600px

#about
  h1
    color green
  hr
    height 3px
    margin-bottom: 40px
    border none
    background #8A8C8E
    triangle-setup()
    triangle()
  .col
    col(2)
    &:first-child
      padding-left 20px
    &:last-child
      padding-right 20px
  h3
    margin 0
    color green
    text 16px
  .chess
    li
      col(4)
      height @width
      padding 20px
      background gray-light
      &:nth-child(2n+5n)
        background gray-lighter