    font-size: 24px;
    font-weight: bold;
  aside
    float right
    width 22%
    margin-left 3%
    padding 10px 20px
    background gray-lighter
  .box
    float right
    width 75%
  article
    margin-bottom 30px
    padding 20px
    border 1px solid gray-lighter
    img.thumb
      float right
