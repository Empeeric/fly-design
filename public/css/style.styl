@import 'mixin'

text-color = #636466
gray-light = #CCCECF
gray-lighter = #E0E1E2
gray-dark = #B1B4B6
pink = #EF2D61
green = #95CE92
green-light = #CFE9CE

colors = 0 green #0084B6 #BC1A5E pink #F98813 #FDB128

width-max = 972px

html, body
  margin 0
  padding 0
  direction rtl

body
  min-width 320px
  font-size 16px
  color text-color
  font-smoothing antialiased

body, h1, h2, h3, h4, h5, input, textarea, button
  font-family 'MeodedPashut', 'Merriweather Sans', arial, sans-serif

h1, h2
  text center

a, a:hover
  color pink
  text-decoration none !important

.hide
  display none !important

.clear
  clear both

img.cover
  width 100%
  height auto

ul.inline
  list-style none
  margin 0
  padding 0
  li
    display inline
    padding 0

.container
  width 100%
  max-width width-max
  min-width 320px
  margin 0 auto
  box-sizing border-box
  ul&
    padding 0
    list-style none
  img&
    display block

#body
  background white
  position relative
  z-index 2

body
  > header
    width 100%
    background white
    position relative
    z-index 40
    .top
      height 100px
      padding 10px
    a#logolink
      float left
      margin 15px
      display block
      font-size 0
    p
      margin 0
      padding 30px 0 10px
      font-size 18px
      strong
        font-size 16px
    nav
      background gray-light
      position relative
      .icon-left-dir
        display none
      a
        display inline-block
        padding 10px 20px
        line-height 20px
        color text-color
        &.active
          text 12px 20px bold pink
        &.hover
          color pink
      a:hover + nav.second, nav:hover
        display block !important
      &.second
        @media (min-width: 500px)
          absolute top 100% right left
        background text-color
        a
          padding 10px 15px
          line-height 13px
          color white
          &.active, &:hover
            background pink
            text 16px normal

triangle-setup()
  position relative
  &:before
    $size = 18px
    content none
    absolute top 100% right 50%
    z-index 10
    display block
    size 0
    margin-right - $size
    border $size solid transparent
    border-bottom-width 0
    border-top-color white

triangle(bg = @background || white)
  &:before
    content ''
    border-top-color bg

section
  @extend .cf
  triangle-setup()
  padding 30px 0
  background white

.icon-plus
  display block
  size 30px
  margin 10px auto
  background pink
  text 30px 30px white
  border-radius 50%
  &:before
    margin 0
  &:hover
    background white
    color pink

#slider
  padding-bottom 30px
  position relative
  triangle()
  header.description
    absolute right top
    opacity 0
    transition opacity .9s 1.1s
    text 30px normal
    margin 30px 0
  .slider li
    img
      width auto
      max-height 400px
    &.rslides1_on
      header
        opacity 1
  nav
    absolute right bottom 30px
    z-index 40
    a
      display inline-block
      size 40px
      text 30px white center
      background green
      &:hover
        background pink
      &:before
        line-height 40px
  .banner
    size 110px
    absolute left 40px top 40px
    z-index 30
    padding 16px
    background green
    text white center
    border-radius 50%

    header.branding
      font-size: 19px;
      opacity: 1;
      font-weight: bold;

    header, p
      margin 0
      padding 0
      line-height 1.3
    .icon-plus
      absolute top 15px left -10px

#quote, #how
  background text-color
  color white
  triangle()
  .about strong
    color green

#quote h1
  font-weight normal

.big-quote
  direction ltr
  text 30px 40px center
  margin-bottom 25px
  font-weight 300
  font-family 'Merriweather Sans', sans
  strong
    font-size 30px
    font-weight 400
  small
    display block
    font-size 16px
  &:before
    content ''
    display block
    margin 10px auto
    background url(../img/quote.png) center
    size 52px 40px

#features
  padding-top 50px
  text-align center
  background green
  triangle()
  li
    col(3)
    padding 0 15px
  header
    text bold white
    margin: 20px 0;
    font-size: 24px;
  a:hover header
    color pink
  .big
    display inline-block
    size 198px
    background no-repeat
    background-size contain
  for noun in key eye hand
    image = '/img/icons/'+ noun +'.png'
    hovr = '/img/icons/'+ noun +'-hover.png'
    .{noun}
      background-image url(image)
    a:hover
      .{noun}
        background-image url(hovr)

#pictures
  padding 0
  position relative
  img
    col(4)
    overflow hidden

#how
  height 123px
  padding 0
  text center
  transition: height .1s;
  header
    margin 0
    padding 30px 0
    text 250% normal
    strong
      color green

#steps
  background gray-lighter
  triangle()
  ul
    overflow hidden
  li
    col(6)
    margin 30px 0 0
    padding 0 15px
    position relative
    transition: top .1s
    header
      text 16px bold
      height 50px
      margin: 16px 0
    .number
      text 150px 100px
    for color, i in colors
      &:nth-child({i})
        .number
          color color
  .line
    margin 30px auto 50px
    padding 0 0 30px 40px
    position relative
    &:before
      content ''
      absolute right top
      z-index 10
      size 0
      border 25px solid transparent
      border-left-width 0
      border-right-color gray-lighter
  .line span
    col(6)
    height 50px
    position relative
    &:after
      content ''
      absolute right 100% top
      z-index 10
      size 0
      border 25px solid transparent
      border-left-width 0
    for color, i in colors
      &:nth-child({i})
        background color
        &:after
          border-right-color color

#we
  padding 0 0 30px
  text center
  triangle()
  header.we
    color white
    text 100px 100px bold
    margin -86px 0 10px 0
    position relative
    transition: top .2s;
  header
    text 24px normal
    margin: 24px 0
  .container
    z-index 4
    position relative
    max-width 600px
  .icon-plus:hover
    background gray-light

#contact
  font-size 18px
  background green
  /*box-shadow 0 3px 5px #ccc*/
  header
    margin 10px 0
    text 60px normal text-color right
  form
    float right
    width 40%
    padding-left 30px
  input, textarea
    display block
    width 100%
    text 18px text-color
    margin-bottom 6px
    padding 8px 15px
    background green-light
    border 0
  textarea
    height 100px
    padding 15px
  button
    float left
    margin-top 10px
    text 24px text-color
    background transparent
    border none
    .icon-left
      display inline-block
      background text-color
      color green
      border-radius 50%
      &:before
        margin 0.14em 0.14em 0
    &:hover, &:active
      .icon-left
        color text-color
        background white
    &:active
      color white
      .icon-left
        color green
  .col
    width 60%
    float right
    p
      margin 0
  .map
    float right
    margin 0 0 15px 15px
    border 1px solid text-color
  strong
    text bold white
  .bottom
    float right
    font-size 16px
  a.icon-fontello
    text 28px text-color
    &:hover
      text white
    &:before
      margin 0

footer
  width 100%
  padding 30px 0 20px 0

.footer-padding
  height 600px
.footer
  padding-top 0

a.up
  margin 20px 0
  display inline-block
  padding-left 5px
  color pink
  line-height 31px
  @media (min-width: 500px)
    span
      display none
    &:hover
      span
        display inline
      .icon-up
        background gray-light
        color pink
  .icon-up
    margin-left 5px
    background pink
    text 25px white
    &:before
      size 30px
      margin 0

.head-box
  margin 32px auto 0px
  h1
    margin 0
    text 30px right
  p
    margin 0

#items
  article
    margin-bottom 30px
    border 1px solid gray-dark
    overflow hidden
    position relative
    max-height 130px
    transition max-height .5s
    &:last-child
      margin-bottom 0
    .title
      height 130px
      padding 30px
      cursor pointer
      background white left top no-repeat
      transition padding .35s
      position relative
      z-index 10
      triangle(text-color)
      .icon-close
        absolute left 5px top 5px
        text 25px white
        transform translateX(-100px)
        transition transform .35s
      &:before
        right 95%
        border-width 20px
      header, p
        margin 0
      header
        text 40px right normal
        i
          display none
          float left
          margin-left -10px
      .big.icon-left-dir
        absolute left top 10px
        font-size 100px
        transform translateX(-100px)
        transition transform .35s
    &.left .title
      padding-right 60%
      background white right top no-repeat
    @media (min-width: 500px)
      &:hover, &.expand
        .title
          border-color text-color
          background text-color !important
          color white
          p .icon-left-dir
            display none
        .big.icon-left-dir
          transform translateX(0)
    &.expand
      max-height 600px
      .title
        padding-right 30px
      .big.icon-left-dir
        transform translateX(-100px)
      .icon-close
        transform translateX(0)
  .content
    padding 20px
    position relative
    .inner
      position absolute
      top 0px
      right 71%
      p
        margin-left 5px
  .slider
    float right
    width 70%
    min-height 100px
    margin-left 30px
    border 1px solid gray-dark
    position relative
    overflow hidden
    .next, .prev
      absolute top 50% right
      z-index 10
      size 38px
      margin-top - (@height / 2)
      background text-color
      text 30px 40px white center
      &:hover
        background pink
    .next
      right auto
      left 0
    .rslides_tabs
      absolute right 15px bottom 15px
      z-index 10
      @extend ul.inline
      a
        display inline-block
        size 12px
        background gray-light
        text 0
        margin-left 8px
        &:hover
          background pink
    .rslides_here a
      background text-color
  .screen-img
    position absolute
    left 13.6%
    top 13%
    width 72.7%
    height 68.6%
    background-size 100%
    animation screenScroll 5s infinite ease-in-out

  &.third
    padding-top 20px
    text center
    .thumb
      display inline-block
      size 300px 170px
      margin-bottom 31px
      margin-left 31px
      text center
      border 1px solid gray-dark
      position relative
      overflow hidden
      &.last
        margin-left 0
      header
        absolute left right bottom
        margin 0
        padding 5px 15px 5px 10px
        background text-color
        text white normal right
        font-size: 24px
        transform: translateY(40px)
        transform-origin: bottom left
        transition: transform .2s
        i
          float left
          transform rotateZ(0)
          transition transform .2s
      &:hover, &.selected
        header
          transform translateY(0)
      &.selected
        header i
          transform rotateZ(-90deg)
    article
      max-height 0
      margin-bottom 0
      border-color transparent
      border-left-color gray-dark
      border-right-color gray-dark
      transition margin-bottom 1s, max-height 1s
      .title
        text white right
        background text-color !important
      &.expand
        margin-bottom 30px
        max-height 600px
        border-color gray-dark
    .inner
      text right

@keyframes screenScroll {
  0% { background-position: 0 0; }
  10% { background-position: 0 0; }
  80% { background-position: 0 100%; }
  100% { background-position: 0 0; }
}
@-moz-keyframes screenScroll {
  0% { background-position: 0 0; }
  10% { background-position: 0 0; }
  80% { background-position: 0 100%; }
  100% { background-position: 0 0; }
}
@-o-keyframes screenScroll {
  0% { background-position: 0 0; }
  10% { background-position: 0 0; }
  80% { background-position: 0 100%; }
  100% { background-position: 0 0; }
}

hr
  height 3px
  margin-bottom: 40px
  border none
  background #8A8C8E
  triangle-setup()
  triangle()

